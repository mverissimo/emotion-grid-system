{
  "private": false,
  "name": "emotion-grid-system",
  "version": "1.0.0",
  "author": "Matheus Verissimo <mverissimoo@hotmail.com>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "pnpm@10.11.1",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mverissimo/emotion-grid-system"
  },
  "keywords": [
    "react",
    "emotion",
    "emotion-css",
    "emotion-grid-system",
    "grid",
    "grid-system",
    "styled-grid",
    "styled-system"
  ],
  "scripts": {
    "commit": "git commit",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "build": "tsdown --format esm --format cjs",
    "clean": "rm -rf node_modules",
    "check-types": "tsc --noEmit",
    "format-and-lint": "biome check src",
    "format-and-lint:fix": "biome check src --write",
    "test:ci": "vitest run --dir src --reporter=verbose",
    "test:watch": "vitest --watch --dir src",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@emotion/jest": "^11.13.0",
    "@pandacss/dev": "^0.53.7",
    "@storybook/addon-a11y": "^9.0.5",
    "@storybook/addon-docs": "^9.0.5",
    "@storybook/addon-themes": "^9.0.5",
    "@storybook/react-vite": "^9.0.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitest/ui": "^3.2.2",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.13",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-test-renderer": "^19.1.0",
    "storybook": "^9.0.5",
    "tsdown": "^0.12.7",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite": "latest",
    "vitest": "latest"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0"
  }
}
