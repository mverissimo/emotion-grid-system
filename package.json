{
  "private": false,
  "name": "emotion-grid-system",
  "version": "1.1.0",
  "author": "Matheus Verissimo <mverissimoo@hotmail.com>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "pnpm@10.29.3",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mverissimo/emotion-grid-system"
  },
  "keywords": [
    "react",
    "emotion",
    "emotion-css",
    "emotion-grid-system",
    "grid",
    "grid-system",
    "styled-grid",
    "styled-system"
  ],
  "scripts": {
    "commit": "git commit",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "build": "tsdown --format esm --format cjs",
    "clean": "rm -rf node_modules",
    "check-types": "tsc --noEmit",
    "format-and-lint": "biome check src",
    "format-and-lint:fix": "biome check src --write",
    "test:ci": "vitest run --dir src --reporter=verbose",
    "test:watch": "vitest --watch --dir src",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@emotion/jest": "^11.14.2",
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-themes": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.18",
    "jsdom": "^28.1.0",
    "lefthook": "^2.1.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-test-renderer": "^19.2.4",
    "storybook": "^10.2.8",
    "tsdown": "^0.20.3",
    "tsup": "^8.5.1",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3",
    "vite": "latest",
    "vitest": "latest"
  },
  "peerDependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0"
  }
}
